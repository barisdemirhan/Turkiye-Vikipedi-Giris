{
  "name": "Türkiye Vikipedi Giriş",
  "short_name": "vikipedi.pw",
  "version": "0.0.8",
  "manifest_version": 2,
  "author": "Barış Demirhan",
  "description": "Türkiye için erişime açık olan wikipedi0.org adresine, wikipedia.org sitesinden otomatik olarak geçmek için basit bir eklenti.",
  "homepage_url": "http://barisdemirhan.com",
  "browser_action": {
    "default_icon": "icons/icon.png"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://*.wikipedia.org/",
    "https://*.wikipedia.org/"
  ]
}
